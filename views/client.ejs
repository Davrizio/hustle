<%- include('partials/header') -%>
  <div class="card lg:card-side bg-base-100 shadow-xl">
    <figure><img class="object-contain h-96 w-96" src="<%= post.image%>" alt="Client Image"/></figure>
    <div class="card-body">
      <h2 class="card-title"><%= post.name %></h2>
      <p><%= post.address %></p>
      <p><%= post.phone %></p>
      <div class="card-actions justify-end">
        <%if(post.user == user.id){ %>
        <form action="/client/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-3">
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
  </div>
  <div class="dropdown dropdown-right">
    <label tabindex="0" class="btn m-1">Choose Exercise</label>
    <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
      <% for(var i=0; i<elist.length; i++) {%>
          <div>
            <form action="/clientWorkout/createPost" enctype="" method="POST">
                <input type="hidden" id="exercise" name="exercise" value="<%= elist[i].title.toUpperCase() %>"><%= elist[i].title.toUpperCase() %></input>
                <input type="number" id="repititions" name="repititions" value="10"></input>
                <input type="hidden" id="clientID"  name="client" value="<%= post._id %>"></input>
                <button type="submit" value="Upload">ADD</button>
            </form>
          </div>
      <% } %>
    </ul>
  </div>
  <div class="hero min-h-fit py-3 mb-20">
    <div class="card flex-shrink-0 w-fit max-w-auto shadow-2xl bg-base-200">
      <div class="card-body">
        <div class="overflow-x-auto w-full">
          <table class="table w-full">
            <thead>
              <tr>
                <th>Exercise</th>
                <th>Reps</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<cworkout.length; i++) {%>
                <tr>
                  <td>
                      <div>
                        <%= cworkout[i].exercise.toUpperCase() %>
                      </div>
                  </td>
                  <td>
                    <%= cworkout[i].repititions %>
                  </td>
                  <th>
                    <div class="avatar">
                      <form class="" action="/clientWorkout/deletePost/<%= cworkout[i]._id %>?_method=DELETE" method="POST">
                        <button class="btn bg-cyan-900 hover:bg-cyan-700 fa fa-trash" type="submit"></button>
                      </form>
                    </div>
                  </th>
                </tr>
              <% } %>
            </tbody>
            <tfoot>
              <tr>
                <th>Exercise</th>
                <th>Reps</th>
                <th></th>
              </tr>
            </tfoot> 
          </table>
        </div>
      </div>
    </div>
  </div>

<%- include('partials/footer') -%>
