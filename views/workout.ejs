<%- include('partials/header') -%>
  <body>
      <div>
        <form action="/exercise/createPost" enctype="multipart/form-data" method="POST">
          <div class="hero min-h-740 py-5">
              <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-secondary">
                <div class="card-body">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text">Add Exercise</span>
                    </label>
                    <input type="text" placeholder="ex. pullups" class="input input-bordered" id="title" name="title"/>
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text">Add Instructions/Equipment Needed</span>
                    </label>
                    <input type="text" placeholder="ex. 10 lb Dumbbells" class="input input-bordered" id="caption" name="caption"/>
                  </div>
                  <div class="form-control mt-6">
                    <button type="submit" class="btn" value="Upload">Save</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="hero py-5">
        <div class="card flex-shrink-0 w-fit max-w-auto shadow-2xl bg-secondary">
          <div class="card-body">
            <div class="overflow-x-auto w-full">
              <table class="table w-full">
                <thead>
                  <tr>
                    <th>Exercise</th>
                    <th>Instructions/Equipment</th>
                    <th>Edit Instructions/Equipment</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(i=0; i<posts.length; i++) {%>
                    <tr>
                      <td>
                        <%= posts[i].title.toUpperCase() %>
                      </td>
                      <td>
                        <div> <%= posts[i].caption.toUpperCase() %> </div>
                      </td>
                      <th>
                        <div>
                          <form action="/exercise/editPost/<%= posts[i].id %>?_method=PUT" method="POST">
                            <div class="form-control">
                              <div class="input-group">
                                <input type="text" placeholder="Edit text" class="input input-bordered" id="edit" name="edit"/>
                                <button type="submit" class="btn btn-square" value="Upload">Save</button>
                              </div>
                            </div>
                          </form>
                        </div>
                      </th>
                      <th>
                        <div class="avatar">
                          <form class="" action="/exercise/deletePost/<%= posts[i]._id %>?_method=DELETE" method="POST">
                            <button class="btn fa fa-trash" type="submit"></button>
                          </form>
                        </div>
                      </th>
                    </tr>
                  <%}%>
                </tbody>
                  <tfoot>
                    <tr>
                      <th>Exercise</th>
                      <th>Instructions/Equipment</th>
                      <th>Edit Instructions/Equipment</th>
                      <th>Delete</th>
                    </tr>
                  </tfoot> 
              </table>
            </div>
          </div>
        </div>
      </div>
    </body>
<%- include('partials/footer') -%>